title = "Grey"
artist = "Leask"
info = "H2ont  Running Splendors!"

<SkinObject CLASS="form"
          OnMouseOut = "sound pong.wav ; stop object"
>
    <SkinObject CLASS="top"
      align=top
      height=25
    >
        <SkinObject CLASS="dima"
          align=left
          kind = "sysmenu"
          Background = "left_top_button.bmp" 
          OpacityMap = "left_top_button_bg.bmp" 
          >
        </SkinObject>

        <SkinObject 
          align=left
          kind = "top"
          background = "top_hor_line.bmp"
          opacitymap = "top_hor_line_bg.bmp"
          >
        </SkinObject>

        <SkinObject CLASS="topright"
          align=right
          kind = "close"
          background = "right_top_button.bmp"
          opacitymap = "right_top_button_bg.bmp"
          >
        </SkinObject>

        <SkinObject 
          align=right
          kind = "top"
          background = "top_hor_line.bmp"
          opacitymap = "top_hor_line_bg.bmp"
          >
        </SkinObject>

        <SkinObject CLASS="caption"
          align=client
          kind="caption"
          ;OnMouseIn = "sound ping.wav ; wait 1000 ; loop begin"
          OnMouseOut = "sound pong.wav ; stop object"
          OnLButtonDown = "goto - OnMouseOut"
        >
            <SkinObject 
              align=left
              background = "left_header.bmp"
              opacitymap = "left_header_bg.bmp"
              >
            </SkinObject>
            <SkinObject 
              align=right
              background = "right_header.bmp"
              opacitymap = "right_header_bg.bmp"
              >
            </SkinObject>
            <SkinObject 
              align=client
              background = "header.bmp"
              opacitymap = "header_bg.bmp"
              kind = "title"
              OnMouseIn = "Stop object ; ColorTo 16711680 - - 500"
              OnMouseOut = "Stop object ; ColorTo 0 - - 1000"
              >
            </SkinObject>
        </SkinObject>

    </SkinObject>

    <SkinObject CLASS="bottom"                
      align=bottom kind = "bottom"
      height = 19
    >
        <SkinObject CLASS="bottomleft"
          align=left
          kind = "bottomleft"
          background = "button.bmp"
          >
        </SkinObject>

        <SkinObject CLASS="bottomright"
          align=right
          kind = "bottomright"
          background = "button.bmp"
          >
        </SkinObject>

        <SkinObject 
          background = bottom_border.bmp
          opacitymap = bottom_border_bg.bmp
          kind = "bottom"
          align=client
          >
        </SkinObject>

    </SkinObject>

    <SkinObject CLASS="left"
      align=left
      backalign=tiled
      kind = "left"
      background = "left_border.bmp"
      opacitymap = "left_border_bg.bmp"
      >
    </SkinObject>

    <SkinObject CLASS="right"
      align=right
      backalign=tiled
      kind = "right"
      background = "right_border.bmp"
      opacitymap = "right_border_bg.bmp"
      >
    </SkinObject>

    <SkinObject CLASS="client"
      align=client
      opacity=255
      kind="client"
      background = "client.bmp"
    >
    </SkinObject>

</SkinObject>






<SkinObject CLASS="control"
>

    <SkinObject CLASS="topleft"
      left = 0 top = 0 
      kind = "topleft"
      background = "left_top_line.bmp"
      >
    </SkinObject>

    <SkinObject 
      right = 100% top = 0
      kind = "topright"
      background = "right_top_line.bmp"
      >
    </SkinObject>

    <SkinObject 
      top = 0 left = 10 right = 100%-10
      backalign=tiled
      kind = "caption"
      background = "top_line.bmp"
      >
    </SkinObject>

    <SkinObject CLASS="bottomleft"
      left = 0 bottom = 100%
      kind = "bottomleft"
      background = "left_bottom_line.bmp"
      >
    </SkinObject>

    <SkinObject 
      right = 100% bottom = 100%
      kind = "bottomright"
      background = "right_bottom_line.bmp"
      >
    </SkinObject>

    <SkinObject 
      left = 10 right = 100%-10 bottom = 100%
      kind = "bottom"
      backalign=tiled
      background = "bottom_line.bmp"
      >
    </SkinObject>


    <SkinObject 
      left = 0 top = 10 bottom = 100%-10
      kind = "left"
      backalign=tiled
      background = "left_line.bmp"
      >
    </SkinObject>

    <SkinObject 
      right = 100% top = 10 bottom=100%-10
      kind = "right"
      background = "right_line.bmp"
      backalign=tiled
      >
    </SkinObject>

    <SkinObject CLASS="client"
      kind=client
      left = 5
      top = 5
      right = 100%-5
      bottom = 100%-5
      opacity=255
    >
    </SkinObject>

</SkinObject>

